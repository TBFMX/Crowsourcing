<h1>Listing perks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Delivery date</th>
      <th>Price</th>
      <th>Pieces</th>
      <th>Project</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perks.each do |perk| %>
      <tr>
        <td><%= perk.title %></td>
        <td><%= perk.description %></td>
        <td><%= perk.delivery_date %></td>
        <td><%= perk.price %></td>
        <td><%= perk.pieces %></td>
        <td><%= perk.project_id %></td>
        <td><%= perk.image_id %></td>
        <td><%= link_to 'Show', perk %></td>
        <td><%= link_to 'Edit', edit_perk_path(perk) %></td>
        <td><%= link_to 'Destroy', perk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

