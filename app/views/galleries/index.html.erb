<%= render partial: '/projects/menu', locals: {project: @project} %>
<br/ ><br/ ><br/ >
<% if @permiso %>
  <%= link_to 'nueva Galeria', '/galleries/new/' + @project.id.to_s %> 

<% end %>
<br/ >
<h1>Lista de galerias</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= gallery.title %></td>
        <td><%= gallery.description %></td>
        <td><%= gallery.project_id %></td>
        <td><%= link_to 'Show', gallery %></td>
        <% if @permiso %>
          <td>  <%= link_to 'Agregar imagen', '/images/new/' + gallery.id.to_s %> | <%#= link_to 'Edit', edit_gallery_path(gallery) %></td>
          <td><%= link_to 'Agregar Video', '/videos/new/' + gallery.id.to_s %><%#= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

