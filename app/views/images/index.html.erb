<h1>Listado de imagenes</h1>

<table>
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Galleria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.image_url %></td>
        <td><%= image.galery.title%></td>
        <td><%= link_to 'Show', image %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Imagen', new_image_path %>
