<h1>Listing projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Monetary goal</th>
      <th>Init date</th>
      <th>Finish date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.monetary_goal %></td>
        <td><%= project.init_date %></td>
        <td><%= project.finish_date %></td>
        <% if check_propiety(project) %>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
